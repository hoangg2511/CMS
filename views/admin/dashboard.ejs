<div class="container-fluid py-4">
  <div class="row g-4">
    <div class="col-12 col-sm-6 col-xl-3">
      <div
        class="card border-0 shadow-sm h-100 dash-card border-start border-primary border-4"
      >
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1 text-uppercase fw-bold small">
                Total Users
              </h6>
              <h3 class="mb-0 fw-bold">1,250</h3>
            </div>
            <div class="icon-shape bg-primary text-white rounded-3 p-3">
              <i class="bi bi-people-fill fs-4"></i>
            </div>
          </div>
          <p class="mt-3 mb-0 text-sm">
            <span class="text-success me-2"
              ><i class="bi bi-arrow-up"></i> 5.2%</span
            >
            <span class="text-nowrap text-muted">compared to last month</span>
          </p>
        </div>
      </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
      <div
        class="card border-0 shadow-sm h-100 dash-card border-start border-success border-4"
      >
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1 text-uppercase fw-bold small">
                Revenue
              </h6>
              <h3 class="mb-0 fw-bold">$45,200</h3>
            </div>
            <div class="icon-shape bg-success text-white rounded-3 p-3">
              <i class="bi bi-currency-dollar fs-4"></i>
            </div>
          </div>
          <p class="mt-3 mb-0 text-sm">
            <span class="text-success me-2"
              ><i class="bi bi-arrow-up"></i> 12%</span
            >
            <span class="text-nowrap text-muted">growth</span>
          </p>
        </div>
      </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
      <div
        class="card border-0 shadow-sm h-100 dash-card border-start border-info border-4"
      >
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1 text-uppercase fw-bold small">
                Orders
              </h6>
              <h3 class="mb-0 fw-bold">320</h3>
            </div>
            <div class="icon-shape bg-info text-white rounded-3 p-3">
              <i class="bi bi-cart-fill fs-4"></i>
            </div>
          </div>
          <p class="mt-3 mb-0 text-sm">
            <span class="text-danger me-2"
              ><i class="bi bi-arrow-down"></i> 2.1%</span
            >
            <span class="text-nowrap text-muted">from yesterday</span>
          </p>
        </div>
      </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
      <div
        class="card border-0 shadow-sm h-100 dash-card border-start border-warning border-4"
      >
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h6 class="text-muted mb-1 text-uppercase fw-bold small">
                Conversion Rate
              </h6>
              <h3 class="mb-0 fw-bold">4.8%</h3>
            </div>
            <div class="icon-shape bg-warning text-white rounded-3 p-3">
              <i class="bi bi-pie-chart-fill fs-4"></i>
            </div>
          </div>
          <p class="mt-3 mb-0 text-sm">
            <span class="text-success me-2"
              ><i class="bi bi-arrow-up"></i> 0.5%</span
            >
            <span class="text-nowrap text-muted">good performance</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
